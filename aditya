#include<stdio.h>
#include<conio.h>
main()
{
int i,j,k,n;
clrscr();
printf("enter lines");
scanf("%d",&n);
for(i=1;i<=2*n+1;i++)
{
	for(j=(2*n+1)-1;j>=(2*n+1)-i;j--)
	{
	printf(" ");
	}
	for(k=1;k<=2*i-1;k++)
	{
	printf("*");
	}
	printf("\n");
	}
for(i=1;i<=2*n+1;i++)
{
	for(j=1;j<=i;j++)
	{
	printf(" ");
	}
	for(k=1;k<=2*n-i;k++)
	{
	printf("*");
	}
	printf("\n");
	}
getch();
}

